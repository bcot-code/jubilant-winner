<article class="post">
    <div id="post-title">
        <h2>{{ post.title }}</h2>
        {% if post.subtitle %}<h3 class="post-subtitle" style="float:right">{{ post.subtitle }}</h3>{% endif %}
        <p class="post-meta">
            {{comment.length}}
            Posted by {{user.username}} | {{ post.date | date: "%B %-d, %Y"
            }}
            <div class="post_content">{{post.content}}</div>
</article>